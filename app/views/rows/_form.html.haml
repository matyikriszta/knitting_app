= form_for @row do |f|
  - if @row.errors.any?
    #error_explanation
      %h2= "#{pluralize(@row.errors.count, "error")} prohibited this row from being saved:"
      %ul
        - @row.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :pattern
    = f.text_field :pattern
  .field
    = f.label :no_of_stitches
    = f.number_field :no_of_stitches
  .field
    = f.label :position
    = f.number_field :position
  .actions
    = f.submit 'Save'
