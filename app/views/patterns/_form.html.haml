= simple_form_for @pattern do |p|
  - if @pattern.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pattern.errors.count, "error")} prohibited this pattern from being saved:"
      %ul
        - @pattern.errors.full_messages.each do |msg|
          %li= msg
  .field
    = p.simple_fields_for :rows do |r|
      = r.input :pattern_id, :value => @pattern.id
  .field
    = p.input :name
  .field
    = p.hidden_field :user_id, :value => current_user.id
  .field
    = p.input :status, collection: ['private', 'public'], as: :radio_buttons 
  .field
    = p.association :difficulty
  .field
    = p.input :description
  .field
    = p.input :instructions, as: :text
  .field
    = p.input :notes, as: :text
  .field
    = p.input :yarn
  .field
    = p.input :equipment
  .field
    = p.association :category
  .actions
    = p.button :submit
