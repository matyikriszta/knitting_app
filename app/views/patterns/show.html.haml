%p#notice= notice

#pattern.nine.columns.alpha
  %h3= @pattern.name + ' by ' + @pattern.user.try(:name)
  - @pattern.rows.each do |row|
    .pattern_row
      - row.stitches.each do |stitch|
        .stitch

#info
  %p
    %b Description:
    = @pattern.description
  %p
    %b Difficulty:
    = @pattern.difficulty.try(:name)
  %hr
    %h5 Instructions:
    %p= @pattern.instructions
  %p
    %b Notes:
    = @pattern.notes
  %p
    %b Yarn:
    = @pattern.yarn
  %p
    %b Equipment:
    = @pattern.equipment
  %p
    %b Category:
    = @pattern.category.try(:name)

#buttons
  = link_to like_show_pattern_path(@pattern), method: :put do
    %i.fa.fa-heart.fa-3x
  = link_to "Unlike", unlike_show_pattern_path(@pattern), method: :put
  \|
  = link_to 'Destroy', @pattern, :method => :delete, :data => { :confirm => 'Are you sure?' }
  \|
  = link_to 'Edit', edit_pattern_path(@pattern)
  \|
  = link_to 'Back', patterns_path

  
