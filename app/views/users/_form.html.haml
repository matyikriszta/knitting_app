= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :user_image
    = f.file_field :user_image
  .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit 'Save', class: 'btn'
    %br
