<p>Choose colors</p>
<div class="input-group demo2">
  <input type="text" value="#FFFFFF" class="form-control" />
  <span class="input-group-addon"><i id="my_colour_code"></i></span>
</div>

<h5><a href="#" id="add"><i class="fa fa-plus"></i> Add color to palette</a></h5>

<% @pattern.colors.each do |color| %>
  <div class="color_swatch" style="background-color: <%= color.color %>" data-id="<%= color.id %>"></div>
<% end %>

<h5><a href="#" id="remove"><i class="fa fa-minus"></i> Remove colors</a></h5>
