<!DOCTYPE html>
<html>
<head>
  <title>KnittingApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,700italic' rel='stylesheet' type='text/css'>

</head>
<body>
  <!-- navbar -->
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <% if current_user %>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="#" id="filter_dropdown"><i class="fa fa-bars fa-2x"></i></a></li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <%= search_form_for @q do |f| %>
            <%= f.text_field :name_or_description_cont, placeholder: 'Search' %>
            <%= f.submit "Search", :class => 'btn btn-default navbar-btn' %>
          <% end %>
        </div>
      </form>
      <div class="navbar-brand nav"><%= link_to 'Wool.ly', patterns_path %></div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to '', new_pattern_path, id: 'new_pattern' %></li>
        <div id="pattern_form">
          <%= render 'shared/pattern_form' %>
        </div>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Your profile', user_path(current_user.id) %></li>
            <li><%= link_to 'Settings', edit_user_path(current_user.id) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'sign in', new_user_session_path %></li>
          <li><%= link_to 'sign up', new_user_registration_path %></li>
        </ul>
      <% end %>
    </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <!--   content -->
  <div id="main">
      <%= yield %>
  </div>

  <div id="filter" class="hidden filter_options">
    <ul>
      <li><%= link_to "Popular", popular_patterns_path %></li>
      <li><%= link_to "Latest", latest_patterns_path %></li>
      <li><%= link_to "Women's", ladies_patterns_path %></li>
      <li><%= link_to "Men's", gents_patterns_path %></li>
      <li><%= link_to "Kids", kids_patterns_path %></li>
      <li><%= link_to "Holiday", holiday_patterns_path %></li>
    </ul>
  </div>

</body>
</html>
