<!DOCTYPE html>
<html>
<head>
  <title>KnittingApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
  <div id="container">
    <div id="nav">
      <h1><%= link_to image_tag('woolly.png'), patterns_path %></h1>

      <div class="login">
        <% if current_user %>
          <%= current_user.email %>
          <%= link_to 'Profile', user_path(current_user.id) %> | <%= link_to 'new pattern', new_pattern_path, class: 'add_pattern_button' %> | <%= link_to 'log out', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'sign in', new_user_session_path %>
          <%= link_to 'sign up', new_user_registration_path %>
        <% end %>
      </div>

    </div>

    <%= yield %>
  </div>

</body>
</html>
